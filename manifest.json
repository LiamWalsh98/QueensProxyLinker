{
  "manifest_version": 3,
  "name": "Queen's Proxy Linker",
  "version": "0.1.0",
  "description": "This extension allows off campus links to be automatically generated for preferred pages.",
 
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Queen's Proxy"
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "http://login.proxy.queensu.ca/*"
  ]
}